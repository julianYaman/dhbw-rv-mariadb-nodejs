<!DOCTYPE html>
    <html lang="en">

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>BuchDashboard - nach Autor suchen</title>

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/80df91d38e.js" crossorigin="anonymous"></script>
        <!-- Custom styles for this template -->
        <link href="/css/simple-sidebar.css" rel="stylesheet">

    </head>

    <body>

    <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
    <div class="list-group list-group-flush">
        <a href="/" class="list-group-item list-group-item-action bg-light">Startseite</a>
        <a href="/autor-auswahl" class="list-group-item list-group-item-action bg-light"><b>Auswahl nach Autoren</b></a>
        <a href="/titel" class="list-group-item list-group-item-action bg-light">Nach Titel</a>
        <a href="/sorte" class="list-group-item list-group-item-action bg-light">Nach Sorte</a>
        <p class="list-group-item text-black-50">
            GitHub: julianYaman<br>
            mail@yaman.pro
        </p>
    </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <% if(searched){ %>
                <h1 class="mt-4">BuchDashboard - Buch gesucht mit "<%= searched %>"</h1>
            <% }else{ %>
                <h1 class="mt-4">BuchDashboard - Buch suchen mit dem Autor</h1>
            <% } %>
            <hr>
            <form action="/autor-auswahl-query" method="post" name="autor-auswahl">
                <div class="input-group mb-3">
                    <input type="text" name="autor_vorname" required class="form-control" placeholder="Vorname" aria-label="Name des Autors" aria-describedby="button-addon2">
                    <input type="text" name="autor_nachname" required class="form-control" placeholder="Nachname" aria-label="Name des Autors" aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit" id="button-addon2" ><i class="fas fa-search"></i> Suche</button>
                    </div>
                </div>
            </form>
            <% if(query){ %>
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                SQL-Query anzeigen
                            </button>
                        </h5>
                    </div>

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne">
                        <div class="card-body">
                            <code><%= query %></code>
                        </div>
                    </div>
                </div>
            <% } %>
            <% if(data){ %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Buchtitel</th>
                            <th>Autor</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% for(var i=0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i].Buchtitel %></td>
                            <td><%= data[i].Autor %></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            <% } %>
        </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
    });
    </script>

    </body>

</html>